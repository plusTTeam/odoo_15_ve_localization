<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_view_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group3']" position="after">
                <group name="group4" attrs="{'invisible': [('payment_type', '!=', 'outbound')]}">
                    <field name="igtf" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="igtf_amount"
                           attrs="{'invisible': [('igtf', '!=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="account_payment_view_tree" model="ir.ui.view">
        <field name="name">account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <field name="igtf_amount" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
