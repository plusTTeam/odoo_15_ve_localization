<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tipo_personas" model="ir.ui.view">
        <field name="name">tipos.personas.view</field>
        <field name="model">tipo.personas</field>
        <!-- <field name="inherit_id" ref="account.view_order_form"/> -->
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title" modifiers="{}">
                            <h1>
                                <field name="name" class="o_input" default_focus="1"
                                       placeholder="Descripcion tipo persona" widget="field_partner_autocomplete"
                                       on_change="1"/>
                            </h1>
                        </div>
                        <!--                       <field name="id" string="Codigo"/>-->
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tipo_personas_action">
        <field name="name">Action Personas</field>
        <field name="res_model">tipo.personas</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Top menu item -->


</odoo>