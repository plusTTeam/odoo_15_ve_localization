<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='print_vendor_checks_setting_container']" position="after">
                <h2>Retention Accounting Accounts</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="account_settings_localization_iva">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Accounting accounts for VAT retention</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific." role="img"/>
                            <div class="content-group">
                                <div class="row mt16"
                                     title="Accounting accounts for VAT retention purchase">
                                    <label string="Purchase IVA" for="iva_account_purchase_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="iva_account_purchase_id"/>
                                </div>
                                <div class="row"
                                     title="Accounting accounts for VAT retention Sale">
                                    <label string="Sale IVA" for="iva_account_sale_id" class="col-lg-3 o_light_label"/>
                                    <field name="iva_account_sale_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="account_settings_localization_islr">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Accounting accounts for ISLR retention</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific." role="img"/>
                            <div class="content-group">
                                <div class="row mt16" title="Accounting accounts for ISLR retention Purchase">
                                    <label string="Purchase ISLR" for="islr_account_purchase_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="islr_account_purchase_id"/>
                                </div>
                                <div class="row" title="Accounting accounts for ISLR retention Sale">
                                    <label string="Sale ISLR" for="islr_account_sale_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="islr_account_sale_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Impuesto a las Grandes Transacciones Financieras (IGTF)</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="account_settings_localization_igtf">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">IGTF</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific." role="img"/>
                            <div class="text-muted">
                                This is the value of the tax to apply to transactions
                            </div>
                            <div class="text-muted">
                                <field name="igtf" style="width: 80px;"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="account_settings_localization_igtf_account">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">IGTF Account</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific." role="img"/>
                            <div class="text-muted">
                                This is the account that will be used for the IGTF accounting entry
                            </div>
                            <div class="content-group">
                                <div class="text-muted" title="Accounting accounts for IGTF">
                                    <field name="igtf_account_id" domain="[('internal_group', '=', 'expense')]"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
