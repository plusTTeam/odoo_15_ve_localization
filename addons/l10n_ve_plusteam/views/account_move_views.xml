<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="control_number" 
                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field
                        name="fiscal_printing_serial"
                        attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"
                />
                <field
                        name="invoice_number"
                        attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))],
                                'readonly': [('state', '!=', 'draft')]}"
                />
            </xpath>
            <xpath expr="//div[@class='d-flex']" position="after"> 
                <field name="import_doc" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}" />
                <field name="form_number" attrs="{'invisible':[('import_doc','=',False)]}"/>
                <field name="file_number" attrs="{'invisible':[('import_doc','=',False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_out_invoice_tree" model="ir.ui.view">
        <field name="name">account.out.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                 <field name="control_number" optional="show"/>
                 <field name="fiscal_printing_serial" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_in_invoice_tree" model="ir.ui.view">
        <field name="name">account.out.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                 <field name="control_number" optional="show"/>
                 <field name="invoice_number" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='payment_state']" position="after">
                 <field name="form_number" optional="hide"/>
                 <field name="file_number" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
