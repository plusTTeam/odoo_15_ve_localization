<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tax_unit_view_form" model="ir.ui.view">
        <field name="name">tax.unit.view</field>
        <field name="model">tax.unit</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                           <field name="date"/>
                        </group>
                        <group>
                           <field name="gazette"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="publication_date"/>
                        </group>
                        <group>
                            <field name="value"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tax_unit_view_tree" model="ir.ui.view">
        <field name="name">tax.unit.tree</field>
        <field name="model">tax.unit</field>
        <field name="arch" type="xml">
            <tree string="Tax Unit">
                <field name="date"/>
                <field name="gazette"/>
                <field name="publication_date"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tax_unit_action">
        <field name="name">Tax Unit</field>
        <field name="res_model">tax.unit</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
