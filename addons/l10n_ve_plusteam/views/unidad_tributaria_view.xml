<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="unidad_tributaria" model="ir.ui.view">
        <field name="name">unidad.tributaria.view</field>
        <field name="model">unidad.tributaria</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                           <field name="date_day"/>
                        </group>
                        <group>
                           <field name="code"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="date_publication"/>
                        </group>
                        <group>
                            <field name="value"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tax_tree" model="ir.ui.view">
        <field name="name">unidad.tributaria.tree</field>
        <field name="model">unidad.tributaria</field>
        <field name="arch" type="xml">
            <tree string="Unidades Tributarias">
                <field name="date_day"/>
                <field name="code"/>
                <field name="date_publication"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="unidad_tributaria_action">
        <field name="name">Unidades Tributarias</field>
        <field name="res_model">unidad.tributaria</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>