<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="islr_concepts_view_form" model="ir.ui.view">
        <field name="name">islr.concepts.form</field>
        <field name="model">islr.concepts</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="code" string="Code" style="width: 100px !important"/>
                        <label class="oe_edit_only" for="name" string="Description"/>
                        <h1>
                            <span>[</span>
                            <field name="code" placeholder="Code" class="oe_inline oe_edit_only" nolabel="1"
                                   style="width: 80px !important"/>
                            <field name="code" placeholder="Code" class="oe_inline oe_read_only" nolabel="1"/>
                            <span>] </span>
                            <field name="name" placeholder="Description" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <group>
                            <field name="numeral"/>
                        </group>
                        <group>
                            <field name="literal"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="islr_concetps_view_tree" model="ir.ui.view">
        <field name="name">islr.concepts.tree</field>
        <field name="model">islr.concepts</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="numeral"/>
                <field name="literal"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="islr_concepts_action">
        <field name="name">ISLR Concepts</field>
        <field name="res_model">islr.concepts</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
