<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
                <xpath expr="//div[@id='print_vendor_checks_setting_container']" position="after">
                      <h2>Cuentas Retención</h2>
                       <div class="row mt16 o_settings_container" name="default_taxes_setting_container">
                          <div class="col-12 col-lg-6 o_setting_box"
                                id="account_settings_localizacion_iva"
                                title="Cuentas para retención del IVA">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Cuentas Contables para la retención de IVA</span>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Purchase IVA" for="purchase_account_id_iva" class="col-lg-3 o_light_label"/>
                                            <field name="purchase_account_id_iva" />
                                        </div>
                                        <div class="row">
                                            <label string="Sale IVA" for="sale_account_id_iva" class="col-lg-3 o_light_label"/>
                                            <field name="sale_account_id_iva" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" id="account_settings_localizacion_islr" title="Cuentas para retención del ISLR">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Cuentas Contables para la retención de ISLR</span>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Purchase ISLR" for="purchase_account_id_islr" class="col-lg-3 o_light_label"/>
                                            <field name="purchase_account_id_islr" />
                                        </div>
                                        <div class="row">
                                            <label string="Sale ISLR" for="sale_account_id_islr" class="col-lg-3 o_light_label"/>
                                            <field name="sale_account_id_islr" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                </xpath>
        </field>
    </record>

</odoo>