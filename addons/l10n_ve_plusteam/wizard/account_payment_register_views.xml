<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_register_view_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group3']" position="after">
                <field name="hide_igtf" invisible="1"/>
                <group name="group4" attrs="{'invisible': [('hide_igtf', '=', True)]}">
                    <field name="igtf"/>
                    <field name="igtf_amount" attrs="{'invisible': [('igtf', '!=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
